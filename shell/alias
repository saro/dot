# vim: ft=zsh

# *** General Aliases ***
alias l='ls --color=auto'
alias ls='ls --color=auto'
alias ll='ls -lh'
alias lla='ls -lah'
alias la='ls -ah'
alias lt='ls -lha /tmp'

alias g='grep --color=auto'
alias gi='grep -i'
alias grep='grep --color=auto'
alias ghist='history | grep '
alias galias='cat ~/.zshrc|grep alias|grep -i'

alias df='df -Th'

alias nopa="curl -sF 'sprunge=<-' http://sprunge.us 2>&1"
alias k9='kill -9'

alias s='sudo '
alias sudo='sudo '

alias dmesgt='dmesg | tail'

alias pgg='ping -c1 www.google.it'
alias pg8='ping -c1 8.8.8.8'
alias pgw='ping saro.space'
alias p='ping '

alias w1='watch -n1 '

alias cl='clear'
alias clera='clear'
alias cls='clear'
alias rz='. ~/.zshrc'
alias rb='. ~/.bashrc'

alias vp="vim -c 'set nomod nolist nonu noma' -c 'nm q <Esc>:q<CR>' -c 'colorscheme jellybeans' - "
alias gvp="gvim -c 'set nomod nolist nonu noma' -c 'nm q <Esc>:q<CR>' -c 'colorscheme jellybeans' - "

alias jc='journalctl '

alias gv='gvim '
alias v='vim '

alias pca='yay '
alias c='cd '
