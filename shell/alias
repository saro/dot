# *** Directories aliases ***
alias dwn='~/downloads/'
alias doc='~/documenti/'
alias vbx='~/vbox/'

# *** Profitap Aliases ***
alias pf='~/profitap/pf/'

# *** sudo aliases ***
if [ $UID -eq 0 ]; then
	alias m='mount '
	alias um='umount '
	alias sc='systemctl '
	alias sysc='systemctl '
	alias netctl='netctl '
	alias pc='pacman '
	alias sv='vim '
	alias sip='ip '
	alias dk='docker '
	alias dk_rm_cont='docker rm $(docker ps -a -q)'
	alias dk_rm_img='docker rmi $(docker images -q -f dangling=true)'
else
	alias m='sudo mount '
	alias um='sudo umount '
	alias sc='sudo systemctl '
	alias sysc='sudo systemctl '
	alias netctl='sudo netctl '
	alias pc='sudo pacman '
	alias sv='sudo vim '
	alias sip='sudo ip '
	alias dk='sudo docker '
	alias dk_rm_cont='sudo docker rm $(sudo docker ps -a -q)'
	alias dk_rm_img='sudo docker rmi $(sudo docker images -q -f dangling=true)'
fi

# *** BT alias ***
alias btload="sudo modprobe bluetooth && sudo modprobe btusb && sudo systemctl start bluetooth.service"
alias btc="bluetoothctl"
alias btoff="echo -e 'power off\nquit'|bluetoothctl"
alias bton="echo -e 'power on\nquit'|bluetoothctl"
alias btjabra="echo -e 'power on\ndisconnect\nconnect 1C:48:F9:9D:BE:04\nquit'|bluetoothctl"
alias btlogi="echo -e 'power on\ndisconnect\nconnect 88:C6:26:6F:50:09\nquit'|bluetoothctl"

# *** Spotify ***
